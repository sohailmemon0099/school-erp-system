{
  "name": "school-erp-system",
  "version": "1.0.0",
  "description": "Advanced School ERP System with Analytics and Dashboard",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "init-db": "node scripts/init-db.js",
    "seed-db": "node scripts/seed-data.js",
    "seed-transactions": "node scripts/seed-transaction-reports.js",
    "init-role-permissions": "node scripts/init-role-permissions.js",
    "client": "cd client && npm start",
    "client-install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run client-install && npm run build"
  },
  "keywords": [
    "school",
    "erp",
    "education",
    "management",
    "dashboard"
  ],
  "author": "School ERP Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "puppeteer": "^24.19.0",
    "sequelize": "^6.35.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
